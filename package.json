{
  "name": "game",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "fix": "prettier --write src",
    "lint": "prettier --check src",
    "start:ui": "react-scripts start",
    "start:agent": "cross-env HC_PORT=$(port) ADMIN_PORT=$(port) concurrently \"npm run start:happ\" \"sleep 5 && npm run start:ui\"",
    "start:happ": "echo \"starting hc instance: $HC_ID\" && RUST_LOG=warn echo \"pass\" | hc s -f=$ADMIN_PORT --piped generate ./workdir/hwordle.happ --run=$HC_PORT -a hwordle$HC_ID network mdns",
    "test": "react-scripts test",
    "prepare": "husky install",
    "dev": "npm run build:happ && npm run start:agent && npm run start:ui",
    "build:happ": "npm run build:dna && hc app pack ./workdir",
    "build:dna": "npm run build:zome && hc dna pack ./dna/workdir",
    "build:zome": "CARGO_TARGET_DIR=target cargo build --release --target wasm32-unknown-unknown",
    "hol": "npm run network 2"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.6",
    "@holochain/client": "0.8.0",
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.19",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/ua-parser-js": "^0.7.36",
    "classnames": "^2.3.1",
    "date-fns": "^2.29.1",
    "egoroof-blowfish": "^2.2.2",
    "grapheme-splitter": "1.0.4",
    "query-string": "^7.1.1",
    "react": "^17.0.2",
    "react-countdown": "^2.3.2",
    "react-datepicker": "^4.8.0",
    "react-div-100vh": "^0.7.0",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.1",
    "typescript": "^4.5.4",
    "ua-parser-js": "^1.0.2",
    "web-vitals": "^2.1.3",
    "svelte": "^3.50.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@holochain-playground/cli": "^0.0.11",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/react-datepicker": "^4.4.2",
    "autoprefixer": "^10.4.4",
    "concurrently": "^6.2.1",
    "concurrently-repeat": "^0.0.1",
    "cross-env": "^7.0.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.2",
    "new-port-cli": "^1.0.0",
    "postcss": "^8.4.5",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "run-singleton-cli": "^0.0.5",
    "tailwindcss": "^3.0.12"
  },
  "lint-staged": {
    "src/*.{ts,tsx,js,jsx,css,md}": "prettier --write"
  },
  "jest": {
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1"
    }
  }
}